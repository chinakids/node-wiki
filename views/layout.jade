extends common

block layout
  body
    body.skin-blue.sidebar-mini
      .wrapper
        header.main-header
          a.logo(href='#')
            span.logo-mini
              b W
              | iki
            span.logo-lg
              b WIKI
              |  文档中心
          nav.navbar.navbar-static-top(role='navigation')
            a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
              span.sr-only Toggle navigation
            .navbar-custom-menu
              ul.nav.navbar-nav
                li.dropdown.user.user-menu
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    img.user-image(src='/theme/img/user2-160x160.jpg', alt='User Image')
                    span.hidden-xs 彭宇杰
                  ul.dropdown-menu
                    li.user-header
                      img.img-circle(src='/theme/img/user2-160x160.jpg', alt='User Image')
                      p Alexander Pierce - Web Developer
                        small Member since Nov. 2012
                    li.user-footer
                      .pull-left
                        a.btn.btn-default.btn-flat(href='#')
                          i.fa.fa-gears  设置                 
                      .pull-right
                        a.btn.btn-default.btn-flat(href='./users/logout')
                          i.fa.fa-sign-out  退出
        aside.main-sidebar
          section.sidebar
            form.sidebar-form(action='#', method='get')
              .input-group
                input.form-control(type='text', name='q', placeholder='Search...')
                span.input-group-btn
                  button#search-btn.btn.btn-flat(type='submit', name='search')
                    i.fa.fa-search
            ul.sidebar-menu
              li.header Markdown 文档
                each item in tree.subNodes
                  li.treeview
                    a(href='#',title='#{item.pathName}')
                      i.fa.fa-server
                      span #{item.pathName}
                      i.fa.fa-angle-left.pull-right
                    ul.treeview-menu
                      each item2 in item.subNodes
                        li
                          a(href='#',title='#{item2.pathName}')
                            i.fa.fa-circle-o  
                            |  #{item2.pathName}
                            i.fa.fa-angle-left.pull-right 
                          ul.treeview-menu
                            each item3 in item2.files
                              li
                                a(href='./book?md=#{item.pathName}/#{item2.pathName}/#{item3}',title='#{item3}')
                                  i.fa.fa-book  
                                  |  #{item3}
                      each item2 in item.files
                        li
                          a(href='./book?md=#{item.pathName}/#{item2}',title='#{item2}')
                            i.fa.fa-book  
                            |  #{item2}
        .content-wrapper
          section.content-header
            h1 
              i.fa.fa-book   #{title}.md
            ol.breadcrumb
              li
                a(href='/')
                  i.fa.fa-dashboard 
                  |  主页      
              each item in map
                li.active #{item}
          section.content
            div.row
              div.col-xs-12
                block content
        footer.main-footer
          .pull-right.hidden-xs
            b By. 
            a(href='http://github.com/chinskids') @Chinakids      
          strong Copyright &copy; 2014-2015 
          |  All rights reserved.
